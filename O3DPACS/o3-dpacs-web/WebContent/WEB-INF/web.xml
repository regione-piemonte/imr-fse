<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>o3-dpacs-web</display-name>
  <context-param>
    <param-name>org.jboss.jbossfaces.WAR_BUNDLES_JSF_IMPL</param-name>
    <param-value>false</param-value>
  </context-param>
  <context-param>
    <param-name>RWS.url</param-name>
    <param-value>http://gnbts9.units.it/joomla/o3-rws/rws.jnlp</param-value>
  </context-param>
  <context-param>
    <param-name>bigger.image.dimension</param-name>
    <param-value>800</param-value>
  </context-param>
  <context-param>
    <param-name>connection.WADO.port.rws</param-name>
    <param-value>443</param-value>
  </context-param>
  <context-param>
    <param-name>connection.protocol</param-name>
    <param-value>https</param-value>
  </context-param>
  <context-param>
    <param-name>org.richfaces.SKIN</param-name>
    <param-value>classic</param-value>
  </context-param>
  <filter>
    <filter-name>richfaces</filter-name>
    <filter-class>org.ajax4jsf.Filter</filter-class>
  </filter>
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>it.units.htl.web.users.LoginFilter</filter-class>
    <init-param>
      <param-name>home_page</param-name>
      <param-value>index.jspf</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>ViewerFilter</filter-name>
    <filter-class>it.units.htl.web.viewer.ViewerFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>richfaces</filter-name>
    <url-pattern>*.jspf</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>*.jspf</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>ViewerFilter</filter-name>
    <url-pattern>*.view</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>richfaces</filter-name>
    <servlet-name>Faces Servlet</servlet-name>
  </filter-mapping>
  <listener>
    <listener-class>flex.messaging.HttpFlexSession</listener-class>
  </listener>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>O3 Executor Entry Point</servlet-name>
    <servlet-class>it.units.htl.web.kos.executor.ExecutorJnlpGenerator</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <display-name>ServerAliveTester</display-name>
    <servlet-name>ServerAliveTester</servlet-name>
    <servlet-class>it.units.htl.web.utils.ServerAliveTester</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>JnlpGenerator</servlet-name>
    <servlet-class>it.units.htl.web.jnlp.JnlpGenerator</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>ImageLibJnlpGenerator</servlet-name>
    <servlet-class>it.units.htl.web.jnlp.ImageLibJnlpGenerator</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>KosFilter</servlet-name>
    <servlet-class>it.units.htl.web.kos.Filter</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>KosRwsJnlpGenerator</servlet-name>
    <servlet-class>it.units.htl.web.kos.rws.KosRwsJnlpGenerator</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>FlexStyleServices</servlet-name>
    <servlet-class>eu.o3c.o3e.flex.style.FlexStyleServices</servlet-class>
  </servlet>
  <servlet>
    <display-name>MessageBrokerServlet</display-name>
    <servlet-name>MessageBrokerServlet</servlet-name>
    <servlet-class>flex.messaging.MessageBrokerServlet</servlet-class>
    <init-param>
      <param-name>services.configuration.file</param-name>
      <param-value>/WEB-INF/flex/services-config.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <display-name>DeletionMarker</display-name>
    <servlet-name>DeletionMarker</servlet-name>
    <servlet-class>it.units.htl.web.Study.deprecation.DeletionMarker</servlet-class>
  </servlet>
  <servlet>
    <display-name>StudiesMoveMarker</display-name>
    <servlet-name>StudiesMoveMarker</servlet-name>
    <servlet-class>it.units.htl.web.Study.moveRequest.StudiesMoveMarker</servlet-class>
  </servlet>
  <servlet>
    <display-name>MoveCompletation</display-name>
    <servlet-name>MoveCompletation</servlet-name>
    <servlet-class>it.units.htl.web.Study.moveRequest.MoveCompletation</servlet-class>
  </servlet>
  <servlet>
    <display-name>CheckUser</display-name>
    <servlet-name>CheckUser</servlet-name>
    <servlet-class>it.units.htl.web.users.CheckUser</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CustLibJnlpGenerator</servlet-name>
    <servlet-class>it.units.htl.web.jnlp.CustLibJnlpGenerator</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <display-name>ViewerLauncher</display-name>
    <servlet-name>ViewerLauncher</servlet-name>
    <servlet-class>it.units.htl.web.launcher.ViewersLauncher</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>O3 Executor Entry Point</servlet-name>
    <url-pattern>/executor</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MessageBrokerServlet</servlet-name>
    <url-pattern>/messagebroker/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>*.view</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>*.jspf</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ServerAliveTester</servlet-name>
    <url-pattern>/ServerAliveTester</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>JnlpGenerator</servlet-name>
    <url-pattern>/JnlpGenerator</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ImageLibJnlpGenerator</servlet-name>
    <url-pattern>/ImageLibJnlpGenerator</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CustLibJnlpGenerator</servlet-name>
    <url-pattern>/CustLibJnlpGenerator</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>KosFilter</servlet-name>
    <url-pattern>/kosfilter</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>KosRwsJnlpGenerator</servlet-name>
    <url-pattern>/kosrwsjnlpgenerator</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FlexStyleServices</servlet-name>
    <url-pattern>/css/flexuistyle.css</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeletionMarker</servlet-name>
    <url-pattern>/markForDeletion</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>StudiesMoveMarker</servlet-name>
    <url-pattern>/markForStudyMove</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MoveCompletation</servlet-name>
    <url-pattern>/isMoveCompleted</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CheckUser</servlet-name>
    <url-pattern>/CheckUser</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ViewerLauncher</servlet-name>
    <url-pattern>/ViewerLauncher</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Faces Servlet</web-resource-name>
      <url-pattern>*.jspf</url-pattern>
    </web-resource-collection>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
  <resource-ref>
    <res-ref-name>java:/jdbc/dbDS</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>